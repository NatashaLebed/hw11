{% extends "::base.html.twig" %}

    {% block title %}Geekhub Advanced PHP{% endblock %}

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/blog.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/lebedguestbook/css/style.css') }}" rel="stylesheet">
    {% endblock %}

    {% block jsHead %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script type="text/javascript" src="{{ asset('js/bootstrap.ie9.js') }}"></script>
        <![endif]-->
    {% endblock %}

    {% block body %}

        <div class="blog-masthead">
            <div class="container">
                <nav class="blog-nav">

                    {% block menu %}

                        <a class="blog-nav-item active" href="{{ path('lebed_guestbook_homepage') }}">Home</a>
                        <a class="blog-nav-item" href="#">About me</a>
                        <a class="blog-nav-item" href="{{ path('lebed_guestbook_viewMessages') }}">Guestbook</a>

                    {% endblock %}

                    {% block search %}

                        <div class="search">
                            <form action="{{ path('lebed_guestbook_search') }}" metod="POST" class="form-search">
                                <input type="text" name="search" class="input-medium search-query" />
                                <input type="submit" class="btn" value="Search"/>
                            </form>
                        </div>

                    {% endblock %}

                </nav>
            </div>
        </div>

        <div class="container">

            <div class="blog-header">
            </div>

            <div class="row">

                <div class="col-sm-8 blog-main">

                    {% block content %}

                        <ul class="pager">
                            <li><a href="#">Previous</a></li>
                            <li><a href="#">Next</a></li>
                        </ul>

                    {% endblock %}

                </div><!-- /.blog-main -->


                <div class="col-sm-3 col-sm-offset-1 blog-sidebar">

                    {% block rightsitebar %}

                        <div class="sidebar-module">
                            <h4>Categories</h4>
                            <ol class="list-unstyled">
                                {{ render(controller('LebedGuestbookBundle:Default:categoryTree')) }}
                            </ol>
                        </div>

                        <div class="sidebar-module sidebar-module-inset">
                            <h4>About</h4>
                            <p>Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
                        </div>
                        <div class="sidebar-module">
                            <h4>Archives</h4>
                            <ol class="list-unstyled">
                                <li><a href="#">January 2014</a></li>
                                <li><a href="#">December 2013</a></li>
                                <li><a href="#">November 2013</a></li>
                                <li><a href="#">October 2013</a></li>
                                <li><a href="#">September 2013</a></li>
                                <li><a href="#">August 2013</a></li>
                                <li><a href="#">July 2013</a></li>
                                <li><a href="#">June 2013</a></li>
                                <li><a href="#">May 2013</a></li>
                                <li><a href="#">April 2013</a></li>
                                <li><a href="#">March 2013</a></li>
                                <li><a href="#">February 2013</a></li>
                            </ol>
                        </div>
                        <div class="sidebar-module">
                            <h4>Elsewhere</h4>
                            <ol class="list-unstyled">
                                <li><a href="#">GitHub</a></li>
                                <li><a href="#">Twitter</a></li>
                                <li><a href="#">Facebook</a></li>
                            </ol>
                        </div>

                    {% endblock %}

                </div><!-- /.blog-sidebar -->

            </div><!-- /.row -->

        </div><!-- /.container -->

        <div class="blog-footer">

            {% block footer %}
                <p>Blog template built for <a href="http://getbootstrap.com">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
                <p>
                    <a href="#">Back to top</a>
                </p>
            {% endblock %}

        </div>

    {% endblock %}

    {% block jsAfterBody %}
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}